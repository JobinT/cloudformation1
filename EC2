---
AWSTemplateFormatVersion: "2010-09-09"
Description: 'AWS ec2 creation template'

Parameters:
  ImageId:
    Type: String
    Description: 'Amazon Linux 2 ami'
    Default: ''
  VpcId:
    Type: String
    Description: Vpc id
    Default:
  SubnetId:
    Type: String
    Description: Subnet Id
    Default:
  AvailabilityZone:
    Type: String
    Description: AZ
    Default:
  InstanceType:
    Type: String
    Description: Ec2 instance type
    Default: t2micro
  KeyName:
    Description: SSH Key pair
    Type: AWS::EC2::KeyPair::KeyName
Resources:
  DemoInstance:
    Type: AWS::EC2::Instance
    Properties:
      ImageId: !Ref ImageId
      InstanceType: !Ref InstanceType
      AvailabilityZone: !Ref AvailabilityZone
      KeyName: !Ref KeyName
      SecurityGroupId: !Ref Securitygroup
      SubnetId: !Ref SubnetId
  Securitygroup:
    Type: AWS::EC2::SecurityGroup
    Properties:
      VpcId: !Ref VpcId
      GroupDescription: SG to allow port 22
      SecurityGroupIngress:
        - IpProtocol: tcp
          FromPort: 22
          ToPort: 22
          CidrIp: '0.0.0.0/0'
    Tags:
      - Key: Name:
        Value: SG-SSH







